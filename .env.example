# Environment Variables Example
# مثال للمتغيرات البيئية

# Telegram API Configuration
API_ID=your_api_id_here
API_HASH=your_api_hash_here
BOT_TOKEN=your_bot_token_here

# Database Configuration
MONGO_DB_URL=mongodb://admin:password123@localhost:27017/bot_factory?authSource=admin

# Owner Configuration
OWNER_ID=your_owner_id_here
OWNER_NAME=Your Name

# Channel and Group Links
CHANNEL=https://t.me/your_channel
GROUP=https://t.me/your_group

# Media Files
PHOTO=https://t.me/your_channel/photo_id
VIDEO=https://t.me/your_channel/video_id

# Logs Configuration
LOGS=your_logs_channel_username

# Redis Configuration (Optional)
REDIS_URL=redis://localhost:6379

# Development Configuration
DEBUG=false
LOG_LEVEL=INFO

# Bot Configuration
BOT_TIMEOUT=120
MAX_BOTS_PER_DEV=1